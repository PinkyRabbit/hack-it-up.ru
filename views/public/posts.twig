{% extends '../layout.twig' %}

{% block bodyblock %}
  {% if posts %}
    <!-- posts -->
    {% for post in posts %}
      <div class="post">
      </div>
        <h2>
          <a href="/article/{{post.slug}}" title="{{post.h1}}">
            <i class="fa fa-github" aria-hidden="true"></i> {{post.h1}}
          </a>
        </h2>
        <a href="/article/{{post.slug}}" rel="nofollow">
          <img class="img-responsive img-thumbnail" src="/images/uploads/{{post.postimage}}" alt="{{post.title}}">
        </a>
        <ol class="breadcrumb">
          <li>
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> <a href="{{post.author.url}}" target="_blank">{{ post.author.username }}</a>
          </li>
          <li>
            <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> {{ post.createdate }}
          </li>
        </ol>
        <p>
          {{post.description}} 
          <a href="/article/{{post.slug}}" rel="nofollow" class="linknext">#Читать далее</a>
        </p>
    {% endfor %}

    <!-- pagination -->
    {% if pagination %}
      {{ pagination }}
    {% endif %}
  {% else %}
    <h2>В этом разделе сайта пока что нет постов...</h2>
    <p>Но обязательно появятся =)</p>
  {% endif %}
  <script>
    $('.post h2').each(function(){ if($(this).height()<65) $(this).css({'padding-left':'55px','padding-top':'10px'});}); 
  </script>
{% endblock %}
