{% macro navbar(menucats, user, development) %}
  <nav class="navbar navbar-default navbar-static-top">
    <div class="navbar-header">
      <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <a href="/" title="На главную" class="navbar-brand">
      <img src="/images/logo-min.jpg", alt="logo min">
    </a>
    <div class="navbar-collapse collapse" id="navbar">
      <ul class="nav navbar-nav">
        {% if menucats %}
          <li class="dropdown">
              <a href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle">
                По категориям <span class="caret"></span>
              </a>
              <ul class="dropdown-menu cats-menu">
                {% for menucat in menucats %}
                  <li>
                    <a href="/category/{{menucat.url}}" title="{{menucat.name}}">
                      <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span> {{menucat.name}}
                    </a>
                  </li>
                {% endfor %}
                <li>
                  <a href="/short", title="Перейти в заметки">
                    <span class="glyphicon glyphicon-paperclip" aria-hidden="true"></span>
                    Заметки
                  </a>
                </li>
              </ul>
          </li>
        {% endif %}
        <li>
          <a href="/about-me",title="Обо мне">Обо мне</a>
        </li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
      {% if user is defined %}
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ user }} <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li>
              <a href="/admin"><span class="glyphicon glyphicon-hourglass" aria-hidden="true"></span>Админка</a>
            </li>
            <li>
              <a href="/admin/new"><span class="glyphicon glyphicon-certificate" aria-hidden="true"></span> Добавить статью</a>
            </li>
            <li>
              <a href="/admin/logout"><span class="glyphicon glyphicon-off" aria-hidden="true"></span> Выйти</a>
            </li>
          </ul>
        </li>
      {% else %}
        <li>
          <input id="search" placeholder="Умный поиск"/>
        </li>
        <div class="list-group" id="searchmenu"></div>
      {% endif %}
      </ul>
    </div>
  </nav>
{% endmacro %}

